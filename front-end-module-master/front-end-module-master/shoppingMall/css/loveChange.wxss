page{
  background-color: #efefef;
  padding-bottom: 50px;
  box-sizing: border-box;
}
.title{
  padding:20px;
  font-size: 26px;
  color:#000
}
.loveList{
  padding:20px;
  display: flex;
  background-color: #fff;
  flex-wrap: wrap;
}
.loveItem.active{
  color:#1ad471;
  border: 1px solid #1ad471;
  background-color: #fff;
}
.loveItem{
  width:60px;
  margin: 0 4px;
  text-align: center;
  border: 1px solid #eee;
  padding:5px 20px;
  font-size: 12px;
  color: #000;
  margin-bottom: 10px;
  border-radius: 18px;
  background-color: #eee;
}
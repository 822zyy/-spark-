.top{
  height: 325rpx;
  position: relative;
  overflow: hidden;
}
.user_cover{
  width: 100%;
  height: 325rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.login_btn{
  margin: 30px 15px 15px 15px;
  display: block;
}
.control-top{
  height: 125rpx;
  border-bottom: 2px solid #ddd;
}
.control-top{
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}
.control-top image{
  width: 100px;
}
.control-bottom{
  height: 125rpx;
  display: flex;
  align-items: center;

}
.control-bottom .search{
  width: 60%;
}
.control-bottom .control-text{
  width: 40%;
  display: flex;
  color: rgb(180, 180, 180);
  font-weight: bold;
  justify-content: space-evenly;
  font-size: 15px;
}
.bottom{
  width: 100%;
  padding-bottom: 35px;
}
.shop-list{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.shop-item {
  border: 1px solid #ddd;
  width: 47%;
  height: 600rpx;
}
.shop-item .cover{
  width: 100%;
  height: 78%;
}
.shop-item .cover image{
  width: 100%;
  height: 100%;
}
.shop-item .title{
  font-weight: bold;
  padding: 5px 10px;
}
.shop-item .text-control{
  padding: 0 10px;
  display: flex;
  font-size: 22px;
  display: flex;
  color:rgb(121, 121, 121);
  justify-content: space-between;
}
.likeNum{
  font-size: 12px;
}
.userInfo{
  display: flex;
  padding:15px 25px 10px 25px;
}
.userInfo .left image{
  width: 100px;
  height: 100px;
  border-radius: 50%;
}
.userInfo .right{
  margin-left: 25px;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.userInfo .right .username{
  color: #fff;
  font-weight: bold;
  font-size: 21px;
}
.userInfo .right .user-text{
  color:#fff;
  display: flex;
  align-items: center;
  font-size: 15px;
}
.userLove{
  width: 400rpx;
  display: flex;
  justify-content: space-evenly;
  padding:0 30px;
}
.right-control{
  margin-left: auto;
}
.changeInfo{
  margin-top: 25px;
}
.logOut{
  color:rgb(223, 223, 223);
  font-size: 22px;
  font-weight: bold;
}
page{
  background-color: #f7f7f7;

}
.navbar{
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-top: 1px solid rgb(230, 230, 230);
}
.navbar-item{
  font-size: 13px;
  padding:15px 0;
}
.navbar-item.active{
  font-weight: bold;
}
.navbarSon{
  display: flex;
  flex-wrap: nowrap;
  overflow:auto;
  padding:10px 2px;
  background-color: rosybrown;
  box-shadow: 0 8px 15px 5px rgba(0, 0, 0, .2) ;
}
.mavbarSonItem{
  flex-shrink: 0;
  margin:0 10px;
  font-size: 13px;
  border:1px solid #eeeced;
  border-radius: 40px;
  color:#000;
  padding:2px 5px;
  background-color: #eeeced;
}
.mavbarSonItem.active{
  background-color: #ff3c87;
  border:1px solid #ff3c87;
  color:#fff
}
.shop-list{
  padding:15px 0;
  display: flex;
  justify-content: space-around;
}
.shop-item {
  border: 1px solid #ddd;
  width: 47%;
  height: 600rpx;
  margin-bottom: 15px;
}
.shop-item .cover{
  width: 100%;
  height: 78%;
}
.shop-item .cover image{
  width: 100%;
  height: 100%;
}
.shop-item .title{
  font-weight: bold;
  padding: 5px 10px;
}
.shop-item .text-control{
  padding: 0 10px;
  display: flex;
  font-size: 22px;
  display: flex;
  color:rgb(121, 121, 121);
  justify-content: space-between;
}
.likeNum{
  font-size: 16px;
}
.aboutus-top-small{
  width: 280rpx;
  float: left;
margin-right:30rpx;
}

.aboutus-top .aboutus-more{
float:right;
color:red;
}
.aboutus-top{
  width: 92%;
  margin:auto;
  line-height:45rpx;
  text-align:justify; 
  text-justify:inter-ideograph;
  padding:10px;
  border-bottom: 1px dashed rgb(145, 145, 145);
  border-top: 1px dashed rgb(145, 145, 145);
  box-shadow: 0 0 15px 5px rgba(0, 0, 0, 0.1);
  margin-bottom: 8px;
  display: flex;
}
.aboutus-top .left{
margin-right: 12px;
}
.aboutus-top .left image{
width: 90px;
height: 90px;
}
.aboutus-top .right{
flex: 1;
}
.aboutus-top .right .title{
font-size: 18px;
color: #000;
display: flex;
margin-bottom: 10px;
}
.aboutus-top .right .content{
  font-size: 14px;
  color: rgb(136, 135, 135);
}
.aboutus-top-small image,.aboutus-bottom image,.aboutus-top-small navigator,.aboutus-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}
.aboutus{
  margin:15px 0;
  background-color: #fff;
}
video{
  width: 185px;
  height: 100px;
  display: block;
}
.recommendation{
  padding:10px
}
.shopList{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}